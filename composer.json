{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel-doctrine/migrations": "1.0.*",
        "laravel-doctrine/orm": "^1.3",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "league/csv": "^8.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "laravel/dusk": "^1.1",
        "mockery/mockery": "0.9.*",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.8.0",
        "phpunit/phpunit": "~5.7",
        "sebastian/phpcpd": "^3.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "TheRestartProject\\RepairDirectory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheRestartProject\\RepairDirectory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "code": [
            "@sniff",
            "@mess",
            "@copypaste",
            "@stan"
        ],
        "test": [
            "artisan config:clear",
            "vendor/bin/phpunit"
        ],
        "sniff": [
            "vendor/bin/phpcs --config-set ignore_errors_on_exit 1",
            "vendor/bin/phpcs --standard=phpstandard.xml --extensions=php src tests"
        ],
        "mess": [
            "vendor/bin/phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
            "vendor/bin/phpmd tests/ text codesize,design,naming,unusedcode"
        ],
        "copypaste": "vendor/bin/phpcpd src app tests",
        "stan": "vendor/bin/phpstan analyse src tests --level=7 -c phpstan.neon"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
