#!/usr/bin/env bash
case "$1" in
    'start')
        cd docker
        docker-compose up -d web phppgadmin
        cd ..
        docker/bin/composer install
        docker/bin/artisan doctrine:migrations:migrate
        ;;
    'reports')
        docker/bin/test unit
        docker/bin/test documentation
        cd docker
        docker-compose up -d codecoverage docs
        cd ..
        ;;
    'stop')
        cd docker
        docker-compose stop
        cd ..
        ;;
    *)
        echo $"Usage: $0 {start|stop}"
        ;;
esac